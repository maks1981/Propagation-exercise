       <div class="parent">
           <div class="child"></div>
       </div>
        
        <style>
        .parent{
            width: 100%;
            height: 200px;
            background: red;
            position: relative;
        }
        .child{
            position: absolute;
            width: 50px;
            height: 50px;
            background: green;
        }
        </style>
    </body>
<script type="text/javascript" src="main.js"></script>
